<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>ru.neoflex</groupId>
    <artifactId>parent</artifactId>
    <version>spark3-2.0.0-SNAPSHOT</version>
  </parent>
  <groupId>ru.neoflex.mspace</groupId>
  <artifactId>metaserver.pim</artifactId>
  <version>spark3-2.0.0-SNAPSHOT</version>
  <properties>
    <java.version>1.8</java.version>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.apache.ant</groupId>
      <artifactId>ant</artifactId>
      <version>1.9.5</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.emf</groupId>
      <artifactId>org.eclipse.emf.ecore</artifactId>
      <version>2.11.0-v20150123-0347</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.emf</groupId>
      <artifactId>org.eclipse.emf.common</artifactId>
      <version>2.11.0-v20150123-0347</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.emf</groupId>
      <artifactId>org.eclipse.emf.ecore.xmi</artifactId>
      <version>2.11.0-v20150123-0347</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.emf</groupId>
      <artifactId>org.eclipse.emf.ecore.change</artifactId>
      <version>2.14.0</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.emfatic</groupId>
      <artifactId>org.eclipse.emf.emfatic</artifactId>
      <version>0.8.0</version>
    </dependency>
    <dependency>
      <groupId>org.jdom</groupId>
      <artifactId>jdom</artifactId>
      <version>1.1.3</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.epsilon</groupId>
      <artifactId>epsilon-graphml</artifactId>
      <version>1.4.0</version>
      <exclusions>
        <exclusion>
          <artifactId>icu4j</artifactId>
          <groupId>com.ibm.icu</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>com.ibm.icu</groupId>
      <artifactId>icu4j</artifactId>
      <version>3.4.4</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.epsilon</groupId>
      <artifactId>epsilon-core</artifactId>
      <version>1.4.0</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.epsilon</groupId>
      <artifactId>org.eclipse.epsilon.eol.engine</artifactId>
      <version>2.2.0</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.epsilon</groupId>
      <artifactId>epsilon-emf</artifactId>
      <version>1.4.0</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.epsilon</groupId>
      <artifactId>epsilon-hutn</artifactId>
      <version>1.4.0</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.jgit</groupId>
      <artifactId>org.eclipse.jgit.http.server</artifactId>
      <version>5.3.0.201903130848-r</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.core</groupId>
      <artifactId>runtime</artifactId>
      <version>3.10.0-v20140318-2214</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.epsilon</groupId>
      <artifactId>epsilon-workflow</artifactId>
      <version>1.4.0</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.emf</groupId>
      <artifactId>org.eclipse.emf.teneo.hibernate.mapper</artifactId>
      <version>2.1.0-v201501071531</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.emf</groupId>
      <artifactId>org.eclipse.emf.teneo.hibernate</artifactId>
      <version>2.1.0-v201501071531</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.emf</groupId>
      <artifactId>org.eclipse.emf.teneo.annotations</artifactId>
      <version>2.1.0-v201501071531</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.emf</groupId>
      <artifactId>org.eclipse.emf.teneo</artifactId>
      <version>2.1.0-v201501071531</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.core</groupId>
      <artifactId>org.eclipse.core.resources</artifactId>
      <version>3.7.100</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.platform</groupId>
      <artifactId>org.eclipse.equinox.common</artifactId>
      <version>3.12.0</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.platform</groupId>
      <artifactId>org.eclipse.equinox.registry</artifactId>
      <version>3.8.800</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.emfatic</groupId>
      <artifactId>org.eclipse.gymnast.runtime.core</artifactId>
      <version>1.0.0</version>
      <exclusions>
        <exclusion>
          <artifactId>*</artifactId>
          <groupId>*</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <repositories>
    <repository>
      <id>bintray</id>
      <url>https://dl.bintray.com/subclipse/maven/</url>
    </repository>
    <repository>
      <id>emf</id>
      <url>https://dl.bintray.com/epsilonlabs/epsilon-standalone/</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>Sonatype</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </pluginRepository>
  </pluginRepositories>
  <build>
    <resources>
      <resource>
        <targetPath>pim/dataset</targetPath>
        <directory>./dataset</directory>
        <includes>
          <include>*.ecore</include>
          <include>*.emf</include>
        </includes>
      </resource>
      <resource>
        <targetPath>pim/eventStreaming</targetPath>
        <directory>./eventStreaming</directory>
        <includes>
          <include>*.ecore</include>
          <include>*.emf</include>
        </includes>
      </resource>
      <resource>
        <targetPath>pim/etl</targetPath>
        <directory>./etl</directory>
        <includes>
          <include>etl.ecore</include>
          <include>etl.evl</include>
          <include>etlrt.ecore</include>
          <include>workflow.evl</include>
          <include>coord.evl</include>
          <include>*.emf</include>
        </includes>
      </resource>
      <resource>
        <targetPath>pim/eventStreaming</targetPath>
        <directory>./eventStreaming</directory>
        <includes>
          <include>evs.ecore</include>
          <include>evs.evl</include>
          <include>*.emf</include>
        </includes>
      </resource>
      <resource>
        <targetPath>pim/etl/ui</targetPath>
        <directory>./etl/ui</directory>
      </resource>
      <resource>
        <targetPath>pim/mspace</targetPath>
        <directory>./mspace</directory>
        <includes>
          <include>mspace.ecore</include>
          <include>*.emf</include>
        </includes>
      </resource>
      <resource>
        <targetPath>pim/relational</targetPath>
        <directory>./relational</directory>
        <includes>
          <include>relational.ecore</include>
        </includes>
      </resource>
      <resource>
        <targetPath>pim/rt</targetPath>
        <directory>./rt</directory>
        <includes>
          <include>rt.ecore</include>
          <include>rt.evl</include>
          <include>*.emf</include>
          <include>*.etl</include>
        </includes>
      </resource>
      <resource>
        <targetPath>pim/dwh</targetPath>
        <directory>./dwh</directory>
        <includes>
          <include>dwh.ecore</include>
          <include>dwh2workflow.etl</include>
          <include>*.emf</include>
        </includes>
      </resource>
      <resource>
        <targetPath>pim/auth</targetPath>
        <directory>./auth</directory>
        <includes>
          <include>auth.ecore</include>
          <include>*.emf</include>
        </includes>
      </resource>
      <resource>
        <targetPath>pim/ui</targetPath>
        <directory>./ui</directory>
      </resource>
      <resource>
        <targetPath>pim/dataspace</targetPath>
        <directory>./dataspace</directory>
        <includes>
          <include>sse.ecore</include>
          <include>**/*.egl</include>
          <include>*.emf</include>
        </includes>
      </resource>
      <resource>
        <targetPath>pim/sm</targetPath>
        <directory>./sm</directory>
        <includes>
          <include>sm.ecore</include>
          <include>*.emf</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <id>model-execute</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target name="genmodel">
                <property name="classpath" refid="maven.compile.classpath" />
                <property environment="env" />
                <echo message="${classpath}" />
                <echo message="${env.JAVA_HOME}" />
                <echo message="${basedir}" />
                <ant antfile="${basedir}/src/main/resources/build.xml" inheritAll="true" target="generate-all">
                  <property name="file.encoding" value="UTF-8" />
                </ant>
              </target>
            </configuration>
          </execution>
          <execution>
            <id>emf2ecore</id>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target name="main">
                <property name="compile_classpath" refid="maven.compile.classpath" />
                <property name="runtime_classpath" refid="maven.runtime.classpath" />
                <property name="test_classpath" refid="maven.test.classpath" />
                <property name="plugin_classpath" refid="maven.plugin.classpath" />
                <taskdef classname="ru.neoflex.meta.utils.GenerateEcoreTask" classpath="target/classes" name="genecore" classpathref="maven.runtime.classpath"></taskdef>
                <genecore />
              </target>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>org.eclipse.epsilon</groupId>
            <artifactId>org.eclipse.epsilon.workflow</artifactId>
            <version>2.3.0-SNAPSHOT</version>
          </dependency>
          <dependency>
            <groupId>org.eclipse.epsilon</groupId>
            <artifactId>org.eclipse.epsilon.workflow.emf</artifactId>
            <version>2.3.0-SNAPSHOT</version>
          </dependency>
          <dependency>
            <groupId>org.eclipse.epsilon</groupId>
            <artifactId>org.eclipse.epsilon.eunit.cmp.emf</artifactId>
            <version>2.3.0-SNAPSHOT</version>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.8</version>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>spark3</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
    </profile>
    <profile>
      <id>spark2</id>
    </profile>
  </profiles>
</project>
