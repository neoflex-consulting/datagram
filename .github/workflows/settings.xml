<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <activeProfiles>
        <activeProfile>github</activeProfile>
    </activeProfiles>

    <profiles>
        <profile>
            <id>github</id>
            <repositories>
                <repository>
                    <id>central</id>
                    <url>https://repo1.maven.org/maven2</url>
                    <releases><enabled>true</enabled></releases>
                    <snapshots><enabled>true</enabled></snapshots>
                </repository>
                <repository>
                    <id>github</id>
                    <name>GitHub Neoflex Consulting Apache Maven Packages</name>
                    <url>https://maven.pkg.github.com/neoflex-consulting/datagram</url>
                </repository>
            </repositories>
            <properties>
                <altSnapshotDeploymentRepository>snapshots::default::https://maven.pkg.github.com/neoflex-consulting/datagram/snapshots</altSnapshotDeploymentRepository>
                <altReleaseDeploymentRepository>releases::default::https://maven.pkg.github.com/neoflex-consulting/datagram/releases</altReleaseDeploymentRepository>
            </properties>
        </profile>
    </profiles>


    <servers>
        <server>
            <id>github</id>
            <username>neoflex-consulting</username>
            <password>${{secrets.GITHUB_TOKEN}}</password>
        </server>
    </servers>
</settings>